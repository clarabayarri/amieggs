<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="30dip"
        android:text="@string/highscores_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.40"
        android:padding="30dip"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/position1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/position1name"
	            android:layout_column="1"
	            android:text="player 1"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
	        <TextView
	            android:id="@+id/position1value"
	            android:text="0"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/position2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/position2name"
	            android:layout_column="1"
	            android:text="player 1"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
	        <TextView
	            android:id="@+id/position2value"
	            android:text="0"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/position3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/position3name"
	            android:layout_column="1"
	            android:text="player 1"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
	        <TextView
	            android:id="@+id/position3value"
	            android:text="0"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/position4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/position4name"
	            android:layout_column="1"
	            android:text="player 1"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
	        <TextView
	            android:id="@+id/position4value"
	            android:text="0"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/position5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/position5name"
	            android:layout_column="1"
	            android:text="player 1"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
	        <TextView
	            android:id="@+id/position5value"
	            android:text="0"
	            android:gravity="right"
	            android:padding="3dip" 
	            android:textColor="@color/pink_text"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/highscores_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:src="@drawable/back_arrow" />

</LinearLayout>