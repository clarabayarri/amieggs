<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.amieggs.game"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/amieggs_icon" android:label="@string/app_name">
        <activity android:name="com.amieggs.game.AmieggsActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.amieggs.game.GameActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar"/>
        <activity android:name="com.amieggs.settings.SettingsActivity" android:label="@string/settings" android:theme="@android:style/Theme.Black.NoTitleBar"/>
        <activity android:name="com.amieggs.game.HighscoresActivity" android:label="@string/app_name" android:theme="@android:style/Theme.Black.NoTitleBar"/>
		<activity android:name="com.amieggs.game.AboutActivity" android:label="@string/about_title"
    		android:theme="@android:style/Theme.Dialog">
		</activity>
		<activity android:name="com.amieggs.settings.ChooseEggsActivity" android:label="@string/app_name" android:theme="@android:style/Theme.Black.NoTitleBar"/>
    </application>
</manifest>